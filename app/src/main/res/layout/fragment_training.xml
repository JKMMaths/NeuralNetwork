<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- File Upload Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Data Files"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_upload_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Features (.xlsx)"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tv_features_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No features file selected"
                    android:textSize="12sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/border_background" />

                <Button
                    android:id="@+id/btn_upload_targets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Targets (.xlsx) - Optional"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tv_targets_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No targets file selected"
                    android:textSize="12sp"
                    android:textColor="@color/purple_500"
                    android:padding="8dp"
                    android:background="@drawable/border_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Model Configuration -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§  Model Configuration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model Type"
                    android:textSize="14sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_model_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hidden Size"
                            android:textSize="14sp"
                            android:textColor="@color/purple_500"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/et_hidden_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="64"
                            android:inputType="number"
                            android:background="@drawable/edittext_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Epochs"
                            android:textSize="14sp"
                            android:textColor="@color/purple_500"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/et_epochs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="100"
                            android:inputType="number"
                            android:background="@drawable/edittext_background" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learning Rate"
                    android:textSize="14sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/et_learning_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.001"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Training Button -->
        <Button
            android:id="@+id/btn_start_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Start Training"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button" />

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/progress_section">

            <ProgressBar
                android:id="@+id/progress_training"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/purple_500" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
